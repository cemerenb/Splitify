
{
  "expo": {
    "plugins":[
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "name": "splite",
    "slug": "splitify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./icon.png",
    "userInterfaceStyle": "light",
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "splash": {
      "image": "./splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#252833"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "cemerenb.splite.com"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./icon.png",
        "backgroundColor": "#252833"
      },
      "splash":{"image": "./splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#252833"},
      "package": "cemerenb.splite.com"
    },
    "web": {
      "favicon": "../assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "8ccc93fa-f98b-4363-96d6-262e4803c934"
      }
    }
  }
}
